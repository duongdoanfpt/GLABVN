@model IEnumerable<PS11905_BAODUONG_ASMFULL_NET104.Models.Sanpham>
@*@{
        Layout = null;
    }*@

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCpanel.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenSp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DonGia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoTaSp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NhomSpNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTaSp)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.HinhAnh)*@
                        <img src="~/images/@item.HinhAnh" width="150" height="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NhomSpNavigation.TenNhom)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaSp">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.MaSp">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.MaSp">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
